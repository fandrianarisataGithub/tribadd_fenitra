<div class="container-email" 
	style="background: #e0e0df;
	width: 80%;
	margin: auto;">
	<header 
		style="height: 50px;
		padding-top: 15px;
		padding-bottom: 15px;
		padding-left: 15px;
		background-color: rgba(13, 105, 180, 1); color: white; font-weight: bold;"
	>
		<h2>Tribadd</h2>
	</header>
	<div class="entete-mail"
		style = "text-align: center;
		width: 98%;
		margin: auto;
		border-bottom: 1px solid rgba(255,255,255,0.3)"
	>
		<h3 style="width: 100%">{{ communaute.titre|raw }}</h3>
	</div>
	{% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
	<div class="content-mail"
		style=" width: 75%;
   		margin: auto;"
	>
		<h3 class="event-title"
			style = "height: 35px;
			padding-top: 10px;
			padding-left: 15px;"
		>{{ event.title|raw }}</h3>
		<div class="event-image" style = "text-align: center;">
			{# <img  src="{{ asset('events/' ~ event.image) }}" alt="photo event"> #}
			<img width="100px" class="d-none" src="{{ img }}" alt="photo event"
			style = "width: 75%;
			height: auto;
			margin : auto;"
			>
		</div>
		<div class="event-description"
			style = " width: 75%;
			height: auto;
			margin : auto;
			text-align: justify;"
		>
			{{ event.description|raw }}
		</div>
		<hr>
		<div class="link"
			style = "width: 75%;
			margin : auto;
			padding-bottom: 25px;
			text-align: end;"
		>
			<a href="{{ url('voir_detail_event', {'id' : event.id}) }}" class="read-more"
				style = "text-decoration: none;
				display: inline-block;
				color: #212529;
				background-color: #ffc107;
				border-color: #ffc107;
				width : 150px;
				text-align : center;
				height : 30px;
				padding-top : 13px;
				border-radius: 5px;
				color: #000;
				font-size: 14px;"
			>Participer</a>
		</div>
	</div>

</div>