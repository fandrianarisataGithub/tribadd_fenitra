{% extends 'layout.html.twig' %}
{% block stylesheets %}
{% endblock %}
{% block body %}
    <h2 class="mb-1 ml-4">Nouveau mot de passe</h2>
    <div class="new-pass">
        <div class="sub-new-pass"></div>
        {{ form_start(form, {'attr': {'class': 'form-new-pass'}}) }}
        <div class="row">
            <div class="form-group col-12">
                {{ form_widget(form.password.first) }}
                <span id="emailHelp" class="form-text text-muted error-register">{{ form_errors(form.password.first) }}</span>
            </div>
            <div class="form-group col-12">
                {{ form_widget(form.password.second) }}
                <span id="emailHelp" class="form-text text-muted error-register">{{ form_errors(form.password.second) }}</span>
            </div>
        </div>
        <div class="form-group register-submit">
            <input class="btn btn-yellow" type="submit" value="Valider">
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
